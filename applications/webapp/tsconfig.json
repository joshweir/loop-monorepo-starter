{
  "extends": "@loop/tsconfig-base",
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/__mocks__/*"],
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "lib": ["dom", "es6", "dom.iterable", "scripthost"],
    "target": "es3",
    "downlevelIteration": true
  },
  "awesomeTypescriptLoaderOptions": {
    "reportFiles": ["./src/**/*"]
  }
}
